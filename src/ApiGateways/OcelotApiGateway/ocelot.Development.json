{
  "Routes": [
    // Products API
    {
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "products.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/products",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/api/products/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "products.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/products/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/products/pagination",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "products.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/products/pagination",
      "UpstreamHttpMethod": [ "GET" ]
    },

    // Images API
    {
      "DownstreamPathTemplate": "/api/images",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "images.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/images",
      "UpstreamHttpMethod": [ "POST" ]
    },

    // Users API
    {
      "DownstreamPathTemplate": "/api/authorization",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "users.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/authorization",
      "UpstreamHttpMethod": [ "POST" ]
    }


  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5010"
  },
  "CorsOptions": {
    "AllowOrigins": [ "*" ],
    "AllowCredentials": true,
    "AllowHeaders": [ "Content-Type", "Authorization" ],
    "AllowMethods": [ "GET", "POST", "PUT", "DELETE" ]
  }
}